<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/home_fragment">

    <action
        android:id="@+id/move_to_details"
        app:destination="@+id/detail_fragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.sample.newsfeed.layers.presentation.ui.home.frag.NewsListFragment"
        android:label="HomeFragment"
        tools:layout="@layout/item_each_news" />

    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.sample.newsfeed.layers.presentation.ui.detail.NewsItemDetailFragment"
        android:label="DetailFrag"
        tools:layout="@layout/fragment_detail_view">

        <argument
            android:name="url"
            app:argType="string" />

    </fragment>

</navigation>